<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkmodePrimary</item>
        <item name="colorPrimaryDark">@color/darkmodePrimaryDark</item>
        <item name="colorAccent">@color/springGreen</item>
    </style>
    <!-- Style for the tabs in the MainActivity-->
    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/darkmodeTextDark</item>
        <item name="tabBackground">@color/darkmodePrimary</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/darkmodeTextLight</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Style for entries in the exercise table layout-->
    <style name="ExerciseTableEntry" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkmodeTextDark</item>
    </style>
</resources>
